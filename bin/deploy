#!/usr/bin/env bash
set -eEuo pipefail

gcloud builds submit \
  --project "${PROJECT_ID}" \
  --tag "gcr.io/${PROJECT_ID}/repo-datatransfer" \
  .

gcloud beta run deploy "/repo-datatransfer" \
  --image "gcr.io/${PROJECT_ID}/repo-datatransfer" \
  --platform "managed" \
  --region "us-central1" \
  --project "${PROJECT_ID}" \
  --concurrency 1 \
  --allow-unauthenticated
